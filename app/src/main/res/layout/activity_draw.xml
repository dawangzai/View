<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eaeaea"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.wangzai.view.canvas.draw.DrawPointView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="#fff" />

        <com.wangzai.view.canvas.draw.DrawLineView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="#fff" />

        <com.wangzai.view.canvas.draw.DrawRectView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="#fff" />

        <com.wangzai.view.canvas.draw.DrawOvalView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="#fff" />

        <com.wangzai.view.canvas.draw.DrawCircleView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="#fff" />

        <com.wangzai.view.canvas.draw.DrawArcView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="#fff" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>